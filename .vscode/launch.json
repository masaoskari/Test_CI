{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "preLaunchTask": "devServer"
    },
    {
      "name": "Chromium",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "preLaunchTask": "devServer",
      "runtimeExecutable": "/snap/bin/chromium",
      "browserLaunchLocation": "ui"
      // https://github.com/microsoft/vscode-js-debug/issues/1628#issuecomment-1544542171
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "devServer"
    },
  ]
}
